{% extends 'layout.html.twig' %}

{% block title %}Nos produits | {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Nos marques</p>
            <div class="list-group">
                <a href="{{ path('store_list_products') }}" class="list-group-item"> Toutes les marques </a>
                {% for brand in brands %}
                    <a href="{{ path('store_list_by_brand', {'brandId': brand.id}) }}" class="list-group-item">
                        {{ brand.name }}
                    </a>
                {% endfor %}
            </div>
        </div>

        <div class="col-md-9">
            <p class="lead">Nos produits " Toutes les marques "</p>
    
            <div class="row text-center">
                {% if products == null %}
                    <div class="alert alert-danger">
                        Désolé, il n'y a aucun produit pour le moment !
                    </div>
                {% else %}
                    {% for product in products %}
                        <div class="col-md-4 col-sm-6 hero-feature">
                            <div class="thumbnail">
                                <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
                                <div class="caption">
                                    <h3>{{ product.name|capitalize }}</h3>
                                    <p>{{ product.description }}</p>
                                    <p>
                                        <span class="badge">{{ product.price }} €</span>
                                        <a href="{{ path('store_show_product', {'id': product.id, 'slug': product.slug }) }}" class="btn btn-default">Voir la fiche</a>
                                        {#<a href="#" class="btn btn-default">Voir la fiche</a>#}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <div class="row text-center">
            <nav>
                <ul class="pagination pagination-lg">
                    <li>
                        <a href="#" aria-label="Précédent">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    {% for i in 1..2 %}
                        <li class="{{ i is same as 1 ? "active" }}">
                            <a href="#">{{ i }}</a>
                        </li>
                    {% endfor %}
                    
                    <li>
                        <a href="#" aria-label="Suivant">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <hr/>

{% endblock %}
